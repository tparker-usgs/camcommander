# Gather and maintain my configs
*/5 * * * * /usr/local/bin/configupdater --url=$CONFIGUPDATER_URL --user=$USER --passwd=$PASSWD $CONFIGUPDATER_CONFIG; chmod -R 500 /tmp/camcommander/svn/.ssh

# pulse the web relays
* * * * * [ -f "$WRP_CONFIG_PATH" ] || webrelaypoker

# retrieve images
* * * * * [ -f "$IS_CONFIG_PATH" ] || imageshepherd.py
